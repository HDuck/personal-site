mixin listItem(link, name, className)
    li(class=className + '__item')
        a(class=className + '__link' href=link)= name

mixin resumeItem(head, dur, text)
    section.resume-item
        h3.resume-item__head!= head
        span.resume-item__dur!= dur
        p.resume__text!= text

mixin progressBar(name, val)
    .progress
        span.progress__name= name
        progress.progress__bar_html5(max="100" value=val)= val + "%"
        - if (name == "Английский")
            span.languages-desc
                            | Умею в чтение технической документации,
                            | составление простых предложений.
                            | Сложности возникают при выборе правильного времени в заданном контексте.
                            | Подтягиваю свои знания на Englishdom.com.

mixin otherSkills(skName, skDesc)
    .skill-item
        span.skill-item__name= skName
        p.skill-item__desc!= skDesc

mixin project(prName, prTech)
    article.portfolio-project
        h3.project__name= prName
        if typeof prTech === 'string'
            span.project__tech= prTech
        else
            span.project__tech= prTech.join(' + ')
